{% extends 'base.html.twig' %}

{% block body %}
	<h2 class="text-center">Edit post</h2>
	<div class="center-block form-center-block text-center">
		<form method="post" enctype="multipart/form-data">
			{{ form_row(form.title) }}
			{{ form_row(form.content) }}
			{{ form_row(form.category) }}
			{{ form_row(form.image) }}
			{{ form_row(form.distinguished) }}
			{{ form_row(form.submit, {'label': 'Edit post'}) }}
			{{ form_rest(form) }}
		</form>
	</div>
{% endblock %}